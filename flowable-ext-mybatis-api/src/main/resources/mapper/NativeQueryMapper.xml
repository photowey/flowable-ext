<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
@author photowey
@date 2020/12/30
@since 1.0.0
-->
<mapper namespace="com.photowey.flowable.ext.mybatis.api.mapper.NativeQueryMapper">
    <!--
        count
        @param customSql
        @author photowey
        @date 2020/12/30
        @since 1.0.0
    -->
    <select id="count"
            parameterType="com.photowey.flowable.ext.mybatis.model.NativeQueryAdaptor"
            resultType="java.lang.Long">
        ${query.customSQL}
    </select>

    <!--
        singleResult
        @param customSql
        @author photowey
        @date 2020/12/30
        @since 1.0.0
    -->
    <select id="singleResult"
            parameterType="com.photowey.flowable.ext.mybatis.model.NativeQueryAdaptor"
            resultType="java.util.Map">
        ${query.customSQL}
    </select>

    <!--
        list
        @param customSql
        @author photowey
        @date 2020/12/30
        @since 1.0.0
    -->
    <select id="list"
            parameterType="com.photowey.flowable.ext.mybatis.model.NativeQueryAdaptor"
            resultType="java.util.Map">
        ${query.customSQL}
    </select>

    <!--
        listPage
        @param customSql
        @param offset
        @param limit
        @author photowey
        @date 2020/12/29
        @since 1.0.0
    -->
    <select id="listPage"
            parameterType="com.photowey.flowable.ext.mybatis.model.NativeQueryAdaptor"
            resultType="java.util.Map">
        ${query.customSQL} LIMIT #{query.offset}, #{query.limit}
    </select>

</mapper>
